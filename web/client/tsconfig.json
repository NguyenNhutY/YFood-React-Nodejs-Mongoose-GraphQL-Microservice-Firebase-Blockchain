{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,

    "strict": true,
   "target": "ES2017",
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
     "resolveJsonModule": true,
  
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*",
    "../backend/helpers/generatePromoCodes.js",
    "src/structure"
  ],
  "exclude": ["node_modules"]
  
}
